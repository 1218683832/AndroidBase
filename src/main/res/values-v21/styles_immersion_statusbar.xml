<?xml version="1.0" encoding="utf-8"?>
<!-- 沉浸式变色状态栏样式 -->
<resources>
    <!-- 适用于app中没有导航栏，且整体的背景是一张图片的界面 -->
    <style name="ImageTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始可以设置颜色，需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- 适用于app中导航栏(谷歌已经建议用toolbar取代actionbar)颜色为纯色的界面 -->
    <style name="ColorTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/color_0000ff_blue</item>
    </style>
</resources>